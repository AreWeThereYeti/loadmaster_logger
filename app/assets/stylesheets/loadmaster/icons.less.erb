@iconW: 27;
@iconH: 27;

i {
	display: inline-block;
	width: 14px;
	height: 14px;
	margin-top: 1px;
	line-height: 14px;
	vertical-align: text-top;
	background-image: url(<%= image_path 'glyphicons-halflings.png' %>);
	background-position: 14px 14px;
	background-repeat: no-repeat;
}

i.white {
	background-image: url(<%= image_path 'glyphicons-halflings-white.png' %>);
}

/* ------- Bootstrap icons positions -----------*/

.icon-chevron-up {
	background-position: -288px -120px;
}

.icon-chevron-down {
	background-position: -313px -119px;
}

.icon-chevron-down {
	background-position: -313px -119px;
}

/*6x3*/
.icon-remove-circle{
	width:28px;
  background-position: -(@iconW*6px) -(@iconH*3px)-14;
	margin-top: 4px;
}

.icon-remove{
	width:28px;
  background-position: -(@iconW*11px)-8 0px;
	margin-top: 6px;
}

th  i.current {
	background-repeat: no-repeat;
  background-position: right center;
}

th i.asc  {
 	.icon-chevron-up
}

th i.desc {
	.icon-chevron-down
}

