.no-margin{
  margin:0px;
}

.hand-cursor{
  cursor: pointer;
  cursor: hand;
}

.bold{
  font-weight:bold;
}

.no-bold{
	font-weight:normal;
}

.cursive{
  font-style:italic;
}

.center{
  margin-left:auto;
  margin-right:auto;
  text-align: center;
  float: none;
}

.float-right{
  float:right;
}

.hide{
  display:none;
}

.fixed-bottom-right{
  position:fixed;
  bottom:0px;
  right:0px;
}

.inline{
	display:inline-block;
}

.more-margin{
	.top{
		margin-top:10px;
	}
	.bottom{
		margin-bottom:10px;
	}
	.left{
		margin-left:10px;
	}
	.right{
		margin-right:10px;
	}
	.top.double{
		margin-top:20px;
	}
	.bottom.double{
		margin-bottom:20px;
	}
	.left.double{
		margin-left:20px;
	}
	.right.double{
		margin-right:20px;
	}
}