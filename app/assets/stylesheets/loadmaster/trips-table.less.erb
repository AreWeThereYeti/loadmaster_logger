@import 'variables.less';

.trip-table-map{
  height: 260px;
}

.trip-table-map .map-container{
  margin:5px;
  top:5px;
  box-shadow: 0px 0px 5px 1px #9e9e9e;

}

.map-container{
  position:relative;
	width:100%;
	height:250px;
	box-shadow: 0px 0px 5px 1px #9e9e9e;
}


#trips-table thead tr th{
  background-color:#46617C;
  color:white;
  a{
    color:white;
  }
}

#trips-table tbody tr.trip-list-details td{
  border:none;
}

#trips-table tr.active{
  background-color: #18bc9c;
  color:white;
}

#trips-table tr.active:hover{
  background-color: #18bc9c;
  color:white;
}

.table>thead>tr>td.active, .table>tbody>tr>td.active, .table>tfoot>tr>td.active, .table>thead>tr>th.active, .table>tbody>tr>th.active, .table>tfoot>tr>th.active, .table>thead>tr.active>td, .table>tbody>tr.active>td, .table>tfoot>tr.active>td, .table>thead>tr.active>th, .table>tbody>tr.active>th, .table>tfoot>tr.active>th {
  background-color: #18bc9c;
}

#trips-table>tbody>tr.trip-list-details>td{
  background-color: #ecf0f1;
}

.force-bottom-align{
	vertical-align: bottom !important;
}

.driver:before{
	content: "";
	background-size: 31px 23px;
	background-repeat: no-repeat;
	background-image: url(/assets/truck.png);
	display: inline-block;
	height: 23px;
	width: 31px;
	vertical-align: sub;
	margin-right: 5px;
}

.weight:before{
	content: "";
	background-size: 24px 20px;
	background-repeat: no-repeat;
	background-image: url(/assets/weight.png);
	display: inline-block;
	height: 20px;
	width: 31px;
	vertical-align: sub;
	margin-right: 5px;
}

.time:before{
	content: "";
	background-size: 20px 24px;
	background-repeat: no-repeat;
	background-image: url(/assets/watch.png);
	display: inline-block;
	height: 24px;
	width: 31px;
	vertical-align: sub;
	margin-right: 5px;
}

.distance:before{
	content: "";
	background-size: 24px 20px;
	background-repeat: no-repeat;
	background-image: url(/assets/ruler.png);
	display: inline-block;
	height: 20px;
	width: 31px;
	vertical-align: sub;
	margin-right: 5px;
}

.comments:before{
	content: "";
	background-size: 24px 20px;
	background-repeat: no-repeat;
	background-image: url(/assets/comments.png);
	display: inline-block;
	height: 20px;
	width: 31px;
	vertical-align:text-top;
	margin-right: 5px;
}

.trip-list-details p{
  max-width: 320px;
}

#trips_time_search{
  margin-top: 8px;
  
  input.form-control {
    width: 88%;
  }
  input.btn{
    padding: 5px 15px;
  }
  a.btn{
    padding: 5px 7px;
  }
}


@media screen and (min-width: @screen-sm) and (max-width: @screen-md) { 
	.trip-list-details p{
	  max-width: 220px;
	}
}

@media screen and (min-width: @screen-md) and (max-width: @screen-lg) { 
	.trip-list-details p{
	  max-width: 320px;
	}
}

@media (min-width: @screen-lg) { 
	.trip-list-details p{
	  max-width: 520px;
	}
}