<div ng-invoice id="invoice-show-page">
  
    <!-- head line -->
  
  <%= render :partial => 'pdf' %>
  
  <div class="actions">
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= link_to 'Tilbage', invoices_path, :class =>"btn btn-primary" %>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-4">
