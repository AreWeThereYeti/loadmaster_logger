<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-3 col-sm-6">
    <table id="invoices-table" class="table table-striped table-bordered">
      <thead>
        <tr>
          <td class="bold">Faktura Nr</td>
          <td><%= @invoice.invoice_number %></td>
        </tr>
      </thead>
      </tbody>
        <tr>
          <td class="bold">Dato</td>
          <td><%= @invoice.timestamp %></td>
        </tr>
        <tr>
          <td class="bold">Kunde</td>
          <td><%= @invoice.costumer %></td>
        </tr>
        <tr>
          <td class="bold">Betales Senest</td>
          <td><%= @invoice.due_date %></td>
        </tr>
        <tr>
          <td class="bold">CVR</td>
          <td><%= @invoice.cvr %></td>
        </tr>
        <tr>
          <td class="bold">Beskrivelse</td>
          <td><%= @invoice.description %></td>
        </tr>
        <tr>
          <td class="bold">Kommentarer</td>
          <td><%= @invoice.commentary %></td>
        </tr>
        <tr>
          <td class="bold">Moms</td>
          <td><%= @invoice.sales_taxes %></td>
        </tr>
        <tr>
          <td class="bold">Pris</td>
          <td><%= @invoice.price %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-md-2 col-sm-2">
    <%= link_to 'Print Faktura', "/invoices/render_pdf?id=#{@invoice.id}" , :class =>"btn btn-success", :target => 'blank' %>
  </div>
</div>
<div class="row">
  <div class="col-md-2 col-sm-2">
    <%= link_to 'Tilbage', edit_invoice_path(@invoice), :class =>"btn btn-primary" %> 
  </div>
  <div class="col-md-2 col-sm-2">
    <%= link_to 'Rediger', edit_invoice_path(@invoice), :class =>"btn btn-info"%> 
  </div>
  <div class="col-md-2 col-sm-2">
    <%= link_to 'Slet', @invoice, method: :delete, data: { confirm: 'Er du sikker?' }, :class =>"btn btn-danger" %>
  </div>
</div>





