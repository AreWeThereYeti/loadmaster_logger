<div class="container">
	<h1>Users</h1>
	<%= render :partial => 'admin/users/search' %>
	<table class="table table-striped table-bordered table-hover">
	 <thead>
	  <tr>
	    <th>Username</th>
	    <th>
	      <%= t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email")) %>
	    </th>
	    <th></th>
	  </tr>
	  </thead>
	  <tbody>
	  <% @users.each do |user| -%>
	   <tr>
	    <td><%= user.username %></td>
	    <td>
	      <%= link_to user.email, admin_user_path(user) %>
	    </td>
	    <td>
	      <%= link_to "Show", admin_user_path(user), :class =>"btn btn-info btn-xs" %>
	      <%= link_to "Edit", edit_admin_user_path(user), :class =>"btn btn-warning btn-xs" %>
	      <%= link_to "Destroy", admin_user_path(user), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class =>"btn btn-danger btn-xs" %>
	    </td>
	    </tr>
	    <% end -%>
	   </tbody>
	</table>
	
	<%= link_to "Opret Ny Vognmand", new_admin_user_path, :class => 'btn btn-primary' %>
	<%= link_to "Opret Ny Mobil Enhed", '/mobile_devices/new', :class => 'btn btn-primary' %>

</div>