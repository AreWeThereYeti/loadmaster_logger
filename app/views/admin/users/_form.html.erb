<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this mobile_device from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="control-group">
   <%= f.label :username, t("activerecord.attributes.user.email", :default => "Username"), :class => 'control-label' %>
  <div class="input">
    <%= f.text_field :username, :class => 'text_field' %>
  </div>
</div>

<div class="control-group">
   <%= f.label :password, t("activerecord.attributes.user.password", :default => "password"), :class => 'control-label' %>
  <div class="input">
    <%= f.password_field :password, :class => 'password_field' %>
  </div>
</div>

<div class="control-group">
   <%= f.label :password_confirmation, t("activerecord.attributes.user.password_confirmation", :default => "password_confirmation"), :class => 'control-label' %>
  <div class="input">
    <%= f.password_field :password_confirmation, :class => 'password_field' %>
  </div>
</div>

<div class="control-group">
   <%= f.label :email, :class => 'control-label' %>
  <div class="input">
    <%= f.email_field :email, :class => 'email_field' %>
  </div>
</div>

<% for role in Role.all %> 
  <div class ="control-group">
   <%= f.label role.name , :class => 'control-label' %>
      <div class="controls">
        <%= check_box_tag "user[role_id]", role.id %> 
      </div> 
  </div>
<% end %>


<div class="form-actions">
  <button class="btn btn-danger'" type="submit">Save</button> or
	<%= link_to "Cancel", admin_users_path, :class =>'btn btn-info' %>
</div>
