<%= form_for(@trip) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% if !!@errors %>
  	<p><%= @errors %></p>
  <% end %>

  <div class="field">
    <%= f.label :nummerplade %><br>
    <%= f.text_field :license_plate, :class=>"form-control", :placeholder => "Nummerplade" %>
  </div>
  <div class="field">
    <%= f.label :last %><br>
    <%= f.text_field :cargo, :class=>"form-control", :placeholder => "Last" %>
  </div>
  <div class="field">
    <%= f.label :chauffør %><br>
    <%= f.text_field :chauffeur, :class=>"form-control", :placeholder => "Chauffør" %>
  </div>
  <div class="field">
    <%= f.label :start_adresse %><br>
    <%= f.text_field :start_address, :class=>"form-control", :placeholder => "Start Adresse" %>
    <%= f.hidden_field :start_lat %>
    <%= f.hidden_field :start_lon %>
  </div>
  <div class="field">
    <%= f.label :slut_adress %><br>
    <%= f.text_field :end_address, :class=>"form-control", :placeholder => "Slut Adresse" %>
    <%= f.hidden_field :end_lat %>
    <%= f.hidden_field :end_lon %>
  </div>
  <div class="field">
    <%= f.label :tur_start %><br>
    <%= select_datetime Date.today, :prefix => :start_timestamp, :placeholder => "Tur Start" %>
  </div>
  <div class="field">
    <%= f.label :tur_slut %><br>
    <%= select_datetime Date.today, :prefix => :end_timestamp, :placeholder => "Tur Slut" %>
  </div>
  <div class="field">
    <%= f.label 'kørt_distance (Km)' %><br>
    <%= f.text_field :distance, :class=>"form-control", :placeholder => "Kør Distance (Km)"%>
  </div>
  <div class="field">
    <%= f.label 'Vægt (kg)' %><br>
    <%= f.text_field :weight, :class=>"form-control", :placeholder => "Vægt (kg)" %>
  </div>
  <div class="field">
    <%= f.label :kunde %><br>
    <%= f.text_field :costumer, :class=>"form-control", :placeholder => "Kunde" %>
  </div>
  <div class="field">
    <%= f.label :kommentarer %><br>
    <%= f.text_area :start_comments, :class=>"form-control", :placeholder => "Kommentarer" %>
  </div>
  <div class="actions">
    <div class="row">
      <div class="col-md-6">
        <%= link_to "Annuller", '/trips' , :class => 'btn btn-danger' %>
      </div>
      <div class="col-md-6">
        <%= f.submit 'Gem Tur', :class => 'btn btn-success float-right'%>
      </div>
    </div>
  </div>
<% end %>
