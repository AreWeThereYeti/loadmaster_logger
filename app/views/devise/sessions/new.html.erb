
<div class="form-signin">

<h2 class="form-signin-heading">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :username_or_password %><br />
  <%= f.text_field :login, :class => 'form-control', :autofocus => true, :placeholder => "Brugernavn eller Email" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => 'form-control', :placeholder => "Kodeord" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, :class => 'checkbox'%> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => 'btn btn-lg btn-primary btn-block' %></div>
<% end %>
</div>